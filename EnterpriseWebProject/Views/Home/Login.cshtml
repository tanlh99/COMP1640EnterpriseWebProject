@model EnterpriseWebProject.ViewModel.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="/Content/Login_att/fonts/icomoon/style.css">
    <link rel="stylesheet" href="/Content/Login_att/css/owl.carousel.min.css">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/Content/Login_att/css/bootstrap.min.css">
    <!-- Style -->
    <link rel="stylesheet" href="/Content/Login_att/css/style.css">
    <title>Login</title>
</head>
<body>
    <div class="d-md-flex half">
        <div class="bg" style="background-image: url('/Content/Login_att/images/University-of-Adelaide-Shutterstock-2048x1366.jpg');"></div>
        <div class="contents">

            <div class="container">
                <div class="row align-items-center justify-content-center">
                    <div class="col-md-12">
                        <div class="form-block mx-auto">
                            <div class="text-center mb-5">
                                <h3 class="text-uppercase">Login</h3>
                            </div>
                            @using (Html.BeginForm("LoginAccount", "Home", FormMethod.Post, new { @id = "frm-login" }))
                            {
                                @Html.AntiForgeryToken()
                                <span class="text-danger">@ViewBag.err</span>

                                <div class="form-group first">
                                    <label for="username">Username</label>                           
                                    @Html.TextBoxFor(m=> m.Username, new { @class="form-control", @placeholder = "Username..."})
                                    @Html.ValidationMessageFor(m=>m.Username, "", new { @class="text-danger"})
                                </div>

                                <div class="form-group last mb-3">
                                    <label for="password">Password</label>
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password..." })
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                </div>

                                <div class="d-sm-flex mb-5 align-items-center">
                                    <span class="ml-auto"><a href="/Home/ForgotPassword" class="forgot-pass">Forgot Password</a></span>
                                </div>

                                <input type="submit" value="Log In" class="btn btn-block py-2 btn-primary">
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="/Content/Login_att/js/jquery-3.3.1.min.js"></script>
    <script src="/Content/Login_att/js/popper.min.js"></script>
    <script src="/Content/Login_att/js/bootstrap.min.js"></script>
    <script src="/Content/Login_att/js/main.js"></script>
</body>
</html>
