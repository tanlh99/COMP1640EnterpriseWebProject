@model IEnumerable<EnterpriseWebProject.Models.File>

@{
    ViewBag.Title = "ViewContribution";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ViewContribution</h2>

@using (Html.BeginForm("DownloadFile", "Manager", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    <input type="hidden" name="magazineId" value="@ViewBag.Id" />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Contribution.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contribution.SubmitDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contribution.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FileType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FileName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                @Html.HiddenFor(m => item.Id)
                <td>
                    @Html.DisplayFor(modelItem => item.Contribution.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contribution.SubmitDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contribution.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FileType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FileName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <input type="checkbox" name="download" value="@item.Id"/>
                </td>
            </tr>
        }

    </table>

    <input type="submit" class="btn btn-primary pull-right" value="Download"/>
    @*<a class="btn btn-default" href="@Url.Action("DownloadFile", "Manager", new { magazineId = ViewBag.Id})">Download</a>*@
}

