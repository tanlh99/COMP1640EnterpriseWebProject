@model List<EnterpriseWebProject.Models.Faculty>
@{
    ViewBag.Title = "Faculty";
    Layout = "~/Views/Shared/_LayoutLogged.cshtml";
}

<!-----------------------------BODY----------------------------------------------------->
<div class="content">
    <div class="container-fluid">
        <div class="col-md-12">
            <div class="card card-plain table-plain-bg">
                <div class="card-header ">
                    <h4 class="card-title">FACULTY TABLE</h4>
                </div>

                <div style="margin-top: 10px; margin-bottom: 10px; position: relative; text-align: right;">
                    <a href="@Url.Action("FacultyCreate","Admin")" class="btn btn-info btn-fill" style="margin:10px; box-shadow:0 1px 2px rgb(0 0 0 / 5%), 0 0 0 1px rgb(63 63 68 / 10%)">Create</a>
                </div>

                <div class="card-body table-full-width table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th style="text-align:center">#</th>
                                <th style="text-align:center">Name</th>
                                <th style="text-align:center">Description</th>
                                <th style="text-align:center">Action(table)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int count = 1;
                                List<string> listAF = ViewBag.listAF;
                                List<string> listMF = ViewBag.listMF;
                            }
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td style="text-align:center">@count</td>
                                    <td style="text-align:center">@item.Name</td>
                                    <td style="text-align:center">@item.Description</td>
                                    <td style="text-align:center">
                                        <a href="@Url.Action("FacultyEdit","Admin", new { facId = item.Id})">Edit</a> | 
                                        @if (listAF.Contains(item.Id.ToString()) || listMF.Contains(item.Id.ToString()))
                                        {
                                            <a name="facId" href="#" onclick="return alert('Cannot delete this row!!!')">Delete</a>
                                        }
                                        else
                                        {
                                            <a name="facId" href="@Url.Action("FacultyDelete","Admin",new { facId = item.Id})" onclick="return confirm('Are you sure delete @item.Name Role?')">Delete</a>
                                        }
                                    </td>
                                </tr>
                                count++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-----------------------------END BODY------------------------------------------------->
